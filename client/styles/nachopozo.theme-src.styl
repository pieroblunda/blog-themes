/* ==============================
----------  Variables -----------
============================== */
@layer theme
  :root
    --bodyBackgroundColor #010101
    --colorPrimary #fff
    --colorSecondary #d62f56
    // --colorSecondaryLight #f3f3f3
    // --fontPrimary system-ui
    // --fontAlternative "arialmt-light", Helvetica, sans-serif;
    // --navBarHeight 48px


  /* ==============================
  -----------  General ------------
  ============================== */
  body
    background-color var(--bodyBackgroundColor)
    color var(--colorPrimary)

  main
    background-color var(--bodyBackgroundColor)

  h1, h2, h3, h4, p, a, aside
    font-family var(--fontPrimary)

  a
    &:link
      color var(--colorPrimary)
    &:visited
      color var(--colorPrimary)
    &:hover
      color var(--colorSecondary)

  /* ==============================
  ------------  Menu --------------
  ============================== */
  header
    background-color var(--bodyBackgroundColor)
    box-shadow 0px 4px 0px 0px rgba(0,0,0,0.05)

    .menu-container
      background-color #000!important

  table
    tr:nth-child(even)
      background #2c3337
    tr:nth-child(odd)
      background #3e4448

